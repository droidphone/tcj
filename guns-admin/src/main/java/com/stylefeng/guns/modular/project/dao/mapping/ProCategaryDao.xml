<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.project.dao.ProCategaryDao">
    <insert id="batchInsert" parameterType="java.util.List" >
        <selectKey resultType="java.lang.Long" keyProperty="id" >
            <![CDATA[SELECT LAST_INSERT_ID() AS ID ]]>
        </selectKey>
        insert into pro_categary (proId, userId,userName, name,currentTime,folType)
        values
        <foreach collection="list" item="item" index="index" separator="," >
            (#{item.proId},#{item.userId},#{item.userName},#{item.name}, #{item.currentTime},#{item.folType})
        </foreach>
    </insert>

    <delete id="deleteProCategaryByProId" parameterType="java.util.List">
        delete from pro_categary where proId = #{proId}
        <if test="list.size > 0">
            and id not in (
            <foreach collection="list" item="item" index="index" separator="," >
                #{item}
            </foreach>
            )
        </if>
    </delete>

    <delete id="updateCurrentTimeByProId" parameterType="java.util.List">
        update pro_categary set currentTime = #{currentTime} , userId = #{userId} , userName = #{userName} where proId = #{proId}
        <if test="list.size > 0">
            and id not in (
            <foreach collection="list" item="item" index="index" separator="," >
                #{item}
            </foreach>
            )
        </if>
    </delete>

    <update id="updateProCategary" parameterType="com.stylefeng.guns.common.persistence.model.ProCategary" >
        update pro_categary
        <set>
            <if test="proId != null" >
                proId = #{proId},
            </if>
            <if test="userId != null" >
                userId = #{userId},
            </if>
            <if test="userName != null" >
                userName = #{userName},
            </if>
            <if test="name != null" >
                name = #{name},
            </if>
            <if test="currentTime != null" >
                currentTime = #{currentTime},
            </if>
            updateTime = now()
        </set>
        where id = #{id}
    </update>
</mapper>